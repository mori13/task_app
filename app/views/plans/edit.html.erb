<h3>スケジュール編集</h3>
<%= render "shared/error", obj: @plan %>
  <%= form_for @plan do |f| %>
    <table>
      <tr>
        <th><%= f.label :titel ,"タイトル" %></th>
        <td><%= f.text_field :title %></td>
      </tr>

      <tr>
        <th><%= f.label :start ,"開始日" %></th>
        <td><%= f.date_select :start %></td>      
      </tr>

      <tr>
        <th><%= f.label :finish ,"終了日" %></th>
        <td><%= f.date_select :finish %></td>      
      </tr>

      <tr>
        <th><%= f.label :all_day ,"終日" %></th>
        <td><%= f.check_box :all_day %>
            <p>終日の場合はチェックを入れます。</p>
        </td>
      </tr>

      <tr>
        <th><%= f.label :memo ,"スケジュールメモ" %></th>
        <td><%= f.text_area :memo %></td>
      </tr>
    </table>
    <div>
      <ul>
        <li><%= f.submit "スケジュール編集を完了する" %></li>
        <li><%= link_to "スケジュール一覧に戻る", :plans %></li>
      </ul>
    </div>
  <% end %>