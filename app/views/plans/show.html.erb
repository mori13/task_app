<h3>スケジュール詳細</h3> 

<table>
  <tr>
    <th>タイトル</th>
    <td><%= @plan.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @plan.start %></td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td><%= @plan.end %></td>
  </tr>
  <tr>
    <th>終日</th>
    <%= render "shared/all_day" %>
  </tr>
  <tr>
    <th>スケジュールメモ</th>
    <td><%= @plan.memo %></td>
  </tr>
</table>

<p><%= link_to "スケジュール一覧に戻る", root_path %></p>
<%= link_to "スケジュールを編集する", [:edit, plan] %>
<%= link_to "スケジュールを削除する",plan,method: :delete,data:{confirm:"本当に削除しますか？"}%>
<%= render "shared/date" %>